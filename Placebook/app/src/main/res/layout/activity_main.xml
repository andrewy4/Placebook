<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_pyramids1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:nestedScrollingEnabled="true">


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place"
        android:id="@+id/Place"
            android:textColor="#ff000000"
        android:textSize="15dp"
        android:textIsSelectable="false"
        android:visibility="visible"
        android:textStyle="bold"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:id="@+id/Longitude"
        android:textStyle="bold"
        android:nestedScrollingEnabled="true"
        android:textColor="#ff000000"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:id="@+id/Latitude"
        android:textStyle="bold"
        android:nestedScrollingEnabled="true"
        android:textColor="#ff000000"
        android:layout_below="@+id/Longitude"
        android:layout_alignLeft="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude"
        android:id="@+id/Altitude"
        android:textStyle="bold"
        android:nestedScrollingEnabled="true"
        android:textColor="#ff000000"
        android:layout_below="@+id/Latitude"
        android:layout_alignLeft="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_camera"
        android:id="@+id/button_camera"
        android:layout_alignTop="@+id/image_camera"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    
    <ImageView
        android:id="@+id/image_camera"
        android:contentDescription="@string/image_cd_camera"
        android:rotation="270.0"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/Place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_below="@+id/button_camera"
        android:layout_alignRight="@+id/button_camera"
        android:layout_alignEnd="@+id/button_camera" />

    <ImageButton
        android:src="@drawable/ic_menu_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_below="@+id/image_camera"
        android:layout_toRightOf="@+id/image_camera"
        android:layout_marginTop="37dp"
        android:layout_alignRight="@+id/Longitude"
        android:layout_alignEnd="@+id/Longitude" />


</RelativeLayout>
